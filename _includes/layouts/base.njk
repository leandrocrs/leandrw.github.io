<!doctype html>
<html lang="pt" prefix="og: http://ogp.me/ns#">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="profile" href="https://gmpg.org/xfn/11" />
    <!-- site verificatoin -->
    <meta name="google-site-verification" content="{{ metadata.googleVerificationCode }}" />
    <meta name="msvalidate.01" content="{{ metadata.bingVerificationCode }}" />
    <meta name="yandex-verification" content="{{ metadata.yandexVerificationCode }}" />
    <link rel="canonical" href="{{ metadata.url }}" />
    <!-- social media and JSONLD -->
    <script type='application/ld+json'>{"@context":"https://schema.org","@type":"Person","url":"https://leandrw.com.br/","sameAs":["https://www.facebook.com/leandrw","https://www.linkedin.com/in/leandrw","https://plus.google.com/u/0/+LeandroCavalcanteLeandrw","https://www.youtube.com/c/LeandroCavalcanteLeandrw","https://twitter.com/leandrw"],"@id":"#person","name":"leandrw (Leandro Cavalcante)"}</script>
    <script type='application/ld+json'>{"@context":"https://schema.org","@type":"WebSite","@id":"https://leandrw.com.br/#website","url":"https://leandrw.com.br/","name":"leandrw&#039;s blog","potentialAction":{"@type":"SearchAction","target":"https://leandrw.com.br/?s={search_term_string}","query-input":"required name=search_term_string"}}</script>
    <!-- Open Graph -->
    <meta property="og:locale" content="pt_BR" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ renderData.title or title or metadata.title }}" />
    <meta property="og:description" content="{{ renderData.description or description or metadata.description }}" />
    <meta property="og:url" content="{{ metadata.url }}" />
    <meta property="og:site_name" content="{{ metadata.title }}" />
    <meta property="og:image" content="{{ renderData.image or metadata.image | url }}?fit=1546%2C928&#038;ssl=1" />
    <meta property="og:image:secure_url" content="{{ (renderData.image or metadata.image) | url }}?fit=1546%2C928&#038;ssl=1" />
    <meta property="og:image:width" content="1546" />
    <meta property="og:image:height" content="928" />
    <meta property="og:image:alt" content="leandrw (Leandro Cavalcante) - Desenvolvedor web em SÃ£o Paulo - SP, Brasil." />
    <!-- twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:description" content="{{ renderData.description or description or metadata.description }}" />
    <meta name="twitter:title" content="{{ renderData.title or title or metadata.title }}" />
    <meta name="twitter:site" content="@leandrw" />
    <meta name="twitter:image" content="{{ metadata.image | url }}" />
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-darcula.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="icon" href="{{ metadata.icon | url}}?fit=32%2C32&#038;ssl=1" sizes="32x32" />
    <link rel="icon" href="{{ metadata.icon | url }}?fit=192%2C192&#038;ssl=1" sizes="192x192" />
    <link rel="apple-touch-icon-precomposed" href="{{ metadata.icon | url }}?fit=180%2C180&#038;ssl=1" />
    <meta name="msapplication-TileImage" content="{{ metadata.icon | url }}?fit=270%2C270&#038;ssl=1" />
  </head>
  <body>
    <header>
      <h1 class="home">
        <a href="{{ '/' | url }}">

          <span>{{ metadata.title }}</span>
        </a>
      </h1>
      <ul class="nav">
        {%- for nav in collections.nav | reverse -%}
        <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
        {%- endfor -%}
      </ul>
    </header>

    <main{% if templateClass %} class="main {{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
